# Grafana Cloud Configuration
# Replace these with your actual Grafana Cloud credentials

# Grafana Cloud Metrics (Prometheus)
GRAFANA_CLOUD_PROMETHEUS_URL=https://prometheus-prod-01-eu-west-0.grafana.net/api/prom/push
GRAFANA_CLOUD_PROMETHEUS_USER=your-prometheus-user-id

# Grafana Cloud Logs (Loki)
GRAFANA_CLOUD_LOKI_URL=https://logs-prod-eu-west-0.grafana.net/loki/api/v1/push
GRAFANA_CLOUD_LOKI_USER=your-loki-user-id

# Grafana Cloud Traces (Tempo)
GRAFANA_CLOUD_TEMPO_URL=https://tempo-eu-west-0.grafana.net:443
GRAFANA_CLOUD_TEMPO_USER=your-tempo-user-id

# Grafana Cloud API Key (base64 encoded user:api_key)
GRAFANA_CLOUD_API_KEY=your-base64-encoded-credentials

# Application Configuration
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# Database Configuration (for production)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=observability_demo
DB_USER=demo_user
DB_PASSWORD=demo_password

# SonarQube Configuration (for CI/CD)
SONAR_HOST_URL=https://sonarcloud.io
SONAR_TOKEN=your-sonar-token
SONAR_ORGANIZATION=your-sonar-org

# Docker Registry Configuration
DOCKER_REGISTRY=your-registry-url
DOCKER_IMAGE_TAG=latest
